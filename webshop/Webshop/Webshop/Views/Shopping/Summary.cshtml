@model Webshop.Models.Product
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Summary</title>
</head>
<body>
    <table>
        <tr>
            <th>Item name</th>
            <th>Manufacturer</th>
            <th>Category</th>
            <th>Quantity</th>
            <th>Sub-total price</th>
        </tr>
        <tr>
            <td>@Model.ItemName</td>
            <td>@Model.Manufacturer</td>
            <td>@Model.Category</td>
            <td>@Model.Size</td>
            <td>@Model.Price</td>
        </tr>
    </table>
</body>
</html>